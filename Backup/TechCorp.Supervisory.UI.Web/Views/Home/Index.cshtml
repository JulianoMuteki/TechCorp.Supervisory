<script type="text/javascript">
    $(function () {
        $("#beginning").button({
            text: false,
            icons: {
                primary: "ui-icon-seek-start"
            }
        }).click(function () {
            rotateLeft();
        });

        $("#rewind").button({
            text: false,
            icons: {
                primary: "ui-icon-seek-prev"
            }
        });
        $("#play").button({
            text: false,
            icons: { primary: "ui-icon-play" }
        })
        .click(function () {
            var options;
            if ($(this).text() === "play") {
                options = {
                    label: "pause",
                    icons: {
                        primary: "ui-icon-pause"
                    }
                },
                startMotorAuto();



            } else {
                options = { label: "play",
                    icons: { primary: "ui-icon-play" }
                };
            } $(this).button("option", options);
        });
        $("#stop").button({ text: false,
            icons: { primary: "ui-icon-stop" }
        }).click(function () {
            $("#play").button("option", { label: "play",
                icons: { primary: "ui-icon-play" }
            });
            stopMotor();
        });
        $("#forward").button({ text: false,
            icons: { primary: "ui-icon-seek-next" }
        });
        $("#end").button({
            text: false,
            icons: { primary: "ui-icon-seek-end" }
        }).click(function () {
            rotateRight();
        });


        $("#shuffle").button();
        $("#repeat").buttonset();
    });

    function startMotorAuto() {
        $(function () {
            alert('start');
            $('#rotatescroll').tinycircleslider({
                interval: true,
                intervaltime: 1000
            });
        });
    }


    function stopMotor() {
        $(function () {

            var rotateslider = $("#rotatescroll");
            rotateslider.tinycircleslider();
            rotateslider.data("tcs").gotoSlide(0);
            alert('stop');
        });
    }

    var i = 15;
    var total = 48;
    var result = 49;
    function rotateRight() {
        var teste = total - i;
        var myVar = setInterval(function () { myTimer() }, 500);

        function myTimer() {
            var rotateslider = $("#rotatescroll");
            rotateslider.data("tcs").gotoSlide(i);
            i = i + 1;

            if (i == result) {
                window.clearTimeout(myVar)
                rotateslider.data("tcs").gotoSlide(0);
            }
        }




        // document.getElementById("demo").innerHTML = x;
    }
    var ang = 48;
 

    function rotateLeft() {
        var myVar = setInterval(function () { myTimer() }, 500);

        function myTimer() {
            var rotateslider = $("#rotatescroll");
            rotateslider.data("tcs").gotoSlide(ang);
            ang = ang - 1;
            if (ang == 0) {
                window.clearInterval(myVar);
                rotateslider.data("tcs").gotoSlide(0);
            }
        }




        // document.getElementById("demo").innerHTML = x;
    }
</script>
